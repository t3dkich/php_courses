{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Is Young Driver</th>
        </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <th scope="row">{{ car.id }}</th>
                <td>{{ car.make }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.traveledDistance }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}